@model IEnumerable<WebAdmin.Models.CatProducto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">

        <li class="breadcrumb-item">Información</li>
        <li class="breadcrumb-item">Productos</li>
        <li class="breadcrumb-item active" aria-current="page">Control de Productos</li>
    </ol>
</nav>
<p>
    <a id="iNuevo" type="submit" class="btn btn-outline-primary" asp-action="Create" value="Nuevo" title="Nuevo"><i class="fas fa-plus"></i> Nuevo</a>
</p>
<table  id="tblProductos" class="table" style="width:100%">
    <thead>
        <tr>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CodigoInterno)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CodigoExterno)
            </th>


            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.CategoriaDesc)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.DescProducto)
            </th>

            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.FechaRegistro)
            </th>
            <th style="text-align:center">
                @Html.DisplayNameFor(model => model.IdEstatusRegistro)
            </th>
            <th style="text-align:center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.CodigoInterno)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.CodigoExterno)
                </td>



                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.CategoriaDesc)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.DescProducto)
                </td>
                <td style="text-align:center">
                    @Html.DisplayFor(modelItem => item.FechaRegistro)
                </td>
                <td style="text-align:center">
                    @if (item.IdEstatusRegistro == 1)
                    {
                        <i class="fas fa-check-circle" style="font-size: 1em; color: green;"></i>
                    }
                    else
                    {
                        <i class="fas fa-stop-circle" style="font-size: 1em; color: red;"></i>
                    }
                </td>
                <td style="text-align:center">
                    <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-outline-secondary" title="Editar"><i class="far fa-edit" style="font-size: 1em; color: #FFC300;"></i></a>
                    <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-outline-secondary" title="Detalles"><i class="far fa-list-alt" style="font-size: 1em; color: #67C5C4 ;"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-outline-secondary" title="Desactivar"><i class="far fa-stop-circle" style="font-size: 1em; color: #FF9333;"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script type="text/javascript">
        $(document).ready(function() {

              $('#tblAlumnos ').DataTable({
        initComplete: function () {
            this.api()
                .columns()
                .every(function () {
                    var column = this;
                    var select = $('<select><option value=""></option></select>')
                        .appendTo($(column.footer()).empty())
                        .on('change', function () {
                            var val = $.fn.dataTable.util.escapeRegex($(this).val());
 
                            column.search(val ? '^' + val + '$' : '', true, false).draw();
                        });
 
                    column
                        .data()
                        .unique()
                        .sort()
                        .each(function (d, j) {
                            select.append('<option value="' + d + '">' + d + '</option>');
                        });
                });
        },
    });

            var vEstatusFlag = '@ViewBag.EstatusFlag'
            var vEmpresaFlag = '@ViewBag.EmpresaFlag'
            var CorporativoFlag = '@ViewBag.CorporativoFlag'
            var vCategoriaFlag = '@ViewBag.CategoriaFlag'

            if (vEstatusFlag == 0) {
                document.getElementById("iNuevo").style.visibility = "hidden";
            }
            else {
                if (vEmpresaFlag == 0) {
                    document.getElementById("iNuevo").style.visibility = "hidden";
                }
                else {
                    if (CorporativoFlag == 0) {
                        document.getElementById("iNuevo").style.visibility = "hidden";
                    }
                    else {


                        if (vCategoriaFlag == 0) {
                            document.getElementById("iNuevo").style.visibility = "hidden";
                        }
                        else {
                            document.getElementById("iNuevo").style.visibility = "visible";
                        }


                    }
                }
            }
        });
    </script>
}